<form {{action "save" on="submit"}}>
  <h2>{{errorMessage}}</h2>
  <fieldset>
    <div>
      <label for="first-name">
        First Name:
      </label>
      {{input value=model.firstName id="first-name"}}
    </div>
    <div>
      <label for="last-name">
        Last Name:
      </label>
      {{input value=model.lastName id="last-name"}}
    </div>
    <div>
      <label for="email">
        Email:
      </label>
      {{input value=model.email id="email"}}
    </div>
    <div>
      <label for="twitter">
        twitter:
      </label>
      {{input value=model.twitter id="twitter"}}
    </div>
    <div>
      <input type="submit" value="Save" class="primary">
      <button {{action "cancel"}}>Cancel</button>
    </div>
  </fieldset>
</form>
